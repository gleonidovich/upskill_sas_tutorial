<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Pro Membership</h1>
          <p>Sign up to the $10 per month pro acccount for access to the DevMatch community with exclusive 
          contacting features!</p>
        <% else %>
          <h1>Basic Membership</h1>
          <p>Sign up to the free basic account for access to the DevMatch community.</p>
        <% end %>
      </div>
      
      <div class="well">
        <h2>Sign up</h2>
        
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
